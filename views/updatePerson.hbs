                                            <option value="#"  selected disabled>--Selecione Opcion--</option>
                                        </select>
                                    </div>
                                </div>
                                 <div class="form-group">
                                    <label for="tipoper" class="col-md-3 control-label"># Casa</label>
                                    <div class="col-md-9">
                                        <select style="height: 33px;" class="form-control" id="numcasa" name = "numcasa" disabled> 
                                            <option value="#"  selected disabled>--Selecione Opcion--</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="fechacom" class="col-md-3 control-label">Fecha Entrada</label>
                                    <div class="col-md-9">
                                        <input type="date" class="form-control" id="fechaen" name="fechaen" disabled>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="fechacom" class="col-md-3 control-label">Fecha Salida</label>
                                    <div class="col-md-9">
                                        <input type="date" class="form-control" id="fechater" name="fechater" disabled>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="fechacom" class="col-md-3 control-label">Estado</label>
                                    <div class="col-md-9">
                                        <select style="height: 33px;" class="form-control"id="estado" name="estado" disabled> 
                                            <option value="#"  selected disabled>--Selecione Opcion--</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <!-- Button -->                                        
                                    <div class="col-md-offset-3 col-md-9">
                                        <button id="btn-signup" type="submit" class="btn btn-success" disabled><i class="icon-hand-right"></i> &nbsp Actualizar</button> 
                                    </div>
                                </div>                  
    </div>

        </div>
