    <body onload="getTipoPs()">       
<div class="container" id="main" style="width: 70%; margin-top: -30px;">
    <form id="signupform" class="form-horizontal" role="form" action="/registerPs" method="POST">
    <div class="row">
        <div class="col-md-12" style="font-size: 22pt; text-align: center;"> 
            <label>Registro Personas</label>
        </div> 
    </div> 
    <div class="row" style=" margin-top: 3%;margin-bottom: 6%; box-shadow: 0px 0px 31px -7px rgba(0,0,0,0.71); height: 125px; ">
        <div class="form-inline" style="width: 100%;">
            <label for="cantp" class="col-md-1 control-label" >Cantidad</label>
            <div class="col-md-2">
                <input type="number" class="form-control" value="1" min="1" max="15"  name="cantp" id="cantp" placeholder="Cantidad" required>
            </div>
            <label for="numcasa" class="col-md-1 control-label"># Casa</label>
            <div class="col-md-3">
                <select style="height: 33px;" class="form-control" id="numcasa" name = "numcasa" required>
                    <option value="#"  selected disabled>--Selecione Opcion--</option>
                </select>
            </div> 
            <label for="tipoper" class="col-md-1 control-label">Tipo Persona</label>
            <div class="col-md-3">
                <select style="height: 33px;" class="form-control" id="tipoper" name = "tipoper" required>
                    <option value="#"  selected disabled>--Selecione Opcion--</option>
                </select>
            </div>
        </div>   
        <div class="form-inline" style="width: 100%;">      
            <label for="fechacom" class="col-md-1 control-label">Fecha Entrada</label>
            <div class="col-md-3">
                <input type="date" class="form-control" name="fechaen" id="fechaen" required>
            </div>
            <div class="col-md-1" style="font-size: 22pt;margin-left: -10px; margin-top: 1%; margin-bottom: 1%;">
                <button id="btn-signup" type="button" class="btn btn-success" onclick="generarP()"><i class="icon-hand-right"></i> &nbsp Agregar</button> 
            </div>
        </div>
    </div> 
    {{{ifm message}}}
    <div id='contendorinfo'>

    </div>
    <input type="text" id="arregloFotos" name="arregloFotos" style="display: none;" >
    </form>
